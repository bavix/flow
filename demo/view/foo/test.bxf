{%extends 'bar:layout'%}

{%block hello%}
    {% with user %}
        {% if !empty(.last) %}
            <h1>Hello, {{ .login}}</h1>
            <h3>{{ .last ~ ' ' ~ .first }}</h3>

            {% for image in .['images']() %}

                {% dump(loop, image) %}

                {% with image %}
                    {% set .path = 'http://via.placeholder.com/450x150' %}
                    <img src="{! image.path !}" />
                {% endwith %}

                {% for item in .['images']() %}
                    <h1>{%dump(item)%}</h1>
                {%forelse%}

                {%endfor%}

            {%forelse%}
                <h1>empty</h1>
            {% endfor %}

            {% for car in .['cars']() %}
                {% dump(car) %}
            {%forelse%}
                <h1>empty</h1>
            {% endfor %}

        {%endif%}
    {% endwith %}
{%endblock%}
