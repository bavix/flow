{%extends 'app:layout'%}

{%section hello%}
    {% with user %}
        {% if !empty(.last) %}
            <h1>Hello, {{ .login}}</h1>
            <h3>{{ .last ~ ' ' ~ .first }}</h3>
            {% for image in .['images']() %}
                {% dump image %}
                {% with image %}
                    <img src="{! .path !}" />
                {% endwith %}
            {% endfor %}
            {! help !}
        {%endif%}
    {% endwith %}
{%endsection%}
